{% trans_default_domain'products-supply.admin' %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">

    {{ form_start(form) }}

    <div class="modal-content p-3 border-bottom border-5 border-danger">
        <div class="modal-header">

            <h5 class="modal-title">
                {# Заголовок модального окна #}
                {{ 'breadcrumb.cancel'|trans }}
            </h5>

            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                <span class="svg-icon svg-icon-2x"></span>
            </div>
        </div>

        <div class="modal-body">
            <h4>
                Вы уверены, что желаете отменить поставку #{{ numbers|join(', ') }}?
            </h4>

            <br>

            <p>
                Убедитесь, что выбран именно тот заказ, который нужно отменить, и нажмите Сохранить. Если вы не
                желаете отменять выбранный заказ, нажмите кнопку Отмена.
            </p>

            <div class="mt-3">
                {{ form_widget(form.comment, { attr: { placeholder : 'Укажите причину отмены' } }) }}
            </div>

            {% for supply in form.supplys %}

                <div id='{{ form.supplys.vars.id }}-collection' class='d-flex align-items-center gap-3 mb-3'>

                    <div class="input-group w-100">
                        {{ form_row(supply.id) }}
                    </div>
                </div>

            {% endfor %}

        </div>

        <div class="modal-footer">

            <div class="flex-grow-1">
                &nbsp;
            </div>

            {# Отмена #}
            <div class="d-flex gap-3">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Удалить #}
                {{ form_widget(form.canceled, { label: '
                    <span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
                '}) }}
            </div>

        </div>
    </div>

    {{ form_end(form) }}

</div>

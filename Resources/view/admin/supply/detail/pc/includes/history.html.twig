{% trans_default_domain 'products-supply.status' %}

{# @var hist \BaksDev\Products\Supply\Repository\ProductSupplyHistory\ProductSupplyHistoryResult #}

<div class="border rounded-4 p-2 mb-3">
    <table class="table table-striped table-borderless mb-0">

        <thead>
        <tr class="small">
            <th>Статус</th>
            <th>Дата</th>
            <th>Время</th>
            <th>Пользователь</th>
        </tr>
        </thead>
        <tbody>

        {% if histories.valid %}
            {% for history in histories %}

                <tr>
                    <td>
                    <span class="badge" style='background-color: {{ statuses.from(history.status).getColor() }};'>
                        {{ history.status.statusValue|trans }}
                    </span>
                    </td>

                    <td>{{ history.modDate|date('d.m.Y') }}</td>
                    <td>{{ history.modDate|date('H:i:s') }}</td>
                    <td>{{ history.profileUsername }}</td>
                </tr>
            {% endfor %}
        {% endif %}

        </tbody>
    </table>

</div>
<main class="main d-print-none ">

    <section class="container px-4 mb-5">

        <div class="mt-3">
            {{ include(_self|replace({ "content.html.twig": "includes/breadcrumb.html.twig" })) }}
        </div>

        {# ПАНЕЛЬ УПРАВЛЕНИЯ #}

        <div class="d-flex justify-content-between align-items-center mb-3 gap-2">

            <div class="w-100 d-flex gap-3 align-items-center">
                <h1 class="h4 text-uppercase fw-bolder mb-0">
                    Управление поставками
                </h1>
            </div>

            <a href="{{ path('products-supply:admin.supply.new') }}"
               class="btn modal-btn modal-link disabled disabled btn-primary text-nowrap"
               data-bs-toggle="modal"
               data-bs-target="#modal"
               title="Создать поставку">

                Создать поставку
            </a>

            <a href="{{ path('products-sign:admin.index') }}"
               class="btn btn-light" role="tooltip" data-bs-toggle="tooltip"
               data-bs-placement="bottom" data-bs-delay='{"show":600,"hide":100}'
               aria-label="Честные знаки" data-bs-original-title="Честные знаки">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                     class="bi bi-qr-code-scan" viewBox="0 0 16 16">
                    <path d="M0 .5A.5.5 0 0 1 .5 0h3a.5.5 0 0 1 0 1H1v2.5a.5.5 0 0 1-1 0zm12 0a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0V1h-2.5a.5.5 0 0 1-.5-.5M.5 12a.5.5 0 0 1 .5.5V15h2.5a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5v-3a.5.5 0 0 1 .5-.5m15 0a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1 0-1H15v-2.5a.5.5 0 0 1 .5-.5M4 4h1v1H4z"/>
                    <path d="M7 2H2v5h5zM3 3h3v3H3zm2 8H4v1h1z"/>
                    <path d="M7 9H2v5h5zm-4 1h3v3H3zm8-6h1v1h-1z"/>
                    <path d="M9 2h5v5H9zm1 1v3h3V3zM8 8v2h1v1H8v1h2v-2h1v2h1v-1h2v-1h-3V8zm2 2H9V9h1zm4 2h-1v1h-2v1h3zm-4 2v-1H8v1z"/>
                    <path d="M12 9h2V8h-2z"/>
                </svg>
            </a>

        </div>

        <div class="border border-light rounded-4 p-3">

            {# ПОСИК, ФИЛЬТРЫ #}

            <div class="d-flex justify-content-between">
                {# Форма поиска по разделу #}
                {% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}

                {# @TODO  #}
                {# {{ include(_self|replace({ "content.html.twig": "form/filter.html.twig" })) }} #}

                {% if filter.delivery is defined and filter.delivery.vars.data %}
                    <div class="d-flex gap-3 m-2">
                        <div><small class="text-muted">Способ доставки:</small>&nbsp;
                            <strong>{{ filter.delivery.vars.data.attr }}</strong>
                        </div>
                    </div>
                {% endif %}

            </div>

            {# КОЛОНКИ С КАРТОЧКАМИ #}

            {{ include(_self|replace({ "content.html.twig": "includes/columns.html.twig" })) }}

        </div>

    </section>

    {#  ОТМЕНА ПОСТАВКИ #}

    <div class="draggable-zone child-hidden position-fixed bottom-0 start-0 p-5" style="z-index: 1024;"
         data-status="canceled">

        <div class="icon rounded-circle mb-2 bg-danger shadow" style="width: 75px; height: 75px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="40" fill="white" class="bi bi-trash"
                 viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                <path fill-rule="evenodd"
                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>

        </div>
    </div>


    {# ПОДДЕРЖКА #}
    {% if constant('BaksDev\\Support\\BaksDevSupportBundle::NAMESPACE') is defined %}
        {{ render_support_widget() }}
    {% endif %}

    <div class="offcanvas offcanvas-start" tabindex="-1"
         id="offcanvas"
         style="--bs-offcanvas-width: 850px;">
    </div>

</main>
